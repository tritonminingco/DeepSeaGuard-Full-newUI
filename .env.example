# DeepSeaGuard Environment Configuration
# Copy this file to .env and update values as needed

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3000/api
VITE_API_BASE_URL=http://localhost:3000

# FathomNet API Configuration  
REACT_APP_FATHOMNET_BASE_URL=http://localhost:3000/api/fathomnet

# WebSocket Configuration
REACT_APP_WS_URL=ws://localhost:3000

# Database Configuration (for InfluxDB)
REACT_APP_INFLUX_URL=http://localhost:8086
REACT_APP_INFLUX_TOKEN=your-influx-token
REACT_APP_INFLUX_ORG=your-org
REACT_APP_INFLUX_BUCKET=deepsea-guard

# Server Configuration (for backend)
PORT=3000
FRONTEND_URL=http://localhost:5173

# Security
NODE_ENV=development
JWT_SECRET=your-jwt-secret-key

# Logging
LOG_LEVEL=info

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_FATHOMNET=true
REACT_APP_ENABLE_3D_MAPPING=true
